<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            style="@style/TextAppearance.Compat.Notification.Title"/>
        <TextView
            android:id="@+id/tv_title_with_banner_with_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:ellipsize="end"
            android:maxLines="2"
            style="@style/TextAppearance.Compat.Notification.Title"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:visibility="gone"
            android:maxLines="4"
            style="@style/TextAppearance.Compat.Notification"/>
        <TextView
            android:id="@+id/tv_message_with_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:visibility="gone"
            android:maxLines="3"
            style="@style/TextAppearance.Compat.Notification"/>


        <TextView
            android:id="@+id/tv_message_with_banner_with_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:ellipsize="end"
            android:maxLines="1"
            style="@style/TextAppearance.Compat.Notification"/>
    </RelativeLayout>


    <ImageView
        android:id="@+id/iv_banner"
        android:layout_width="match_parent"
        android:layout_height="139dp"
        android:visibility="gone"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:id="@+id/linear_layout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_notification_button_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="button1"
            android:singleLine="true"
            android:textSize="13sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_notification_button_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="button1"
            android:singleLine="true"
            android:textSize="13sp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>