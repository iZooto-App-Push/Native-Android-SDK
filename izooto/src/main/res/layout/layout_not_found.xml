<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/nh_not_found_layout"
    android:orientation="vertical"
    android:padding="8dp"
    android:gravity="center"
    android:visibility="gone">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_iz_nh_not_found"
        tools:ignore="ImageContrastCheck" />
    <TextView
        android:id="@+id/nz_not_fount_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="@string/nz_not_fount_text"/>
    <TextView
        android:id="@+id/nz_not_fount_text_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:text="@string/nz_not_fount_text_2"/>


</LinearLayout>
