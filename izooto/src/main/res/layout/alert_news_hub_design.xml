<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/nh_toolbar_alert"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/iz_azure">


        <TextView
            android:id="@+id/tv_toolbar_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/margin_10dp"
            android:text="@string/iz_news_hub"
            android:singleLine="true"
            android:maxLength="20"
            android:textColor="@color/iz_white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_toolbar_back_button_alert"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/cancel"
            app:tint="@color/iz_white" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idNestedSV_alert"
        android:layout_above="@+id/ll_powered_by"
        android:layout_centerVertical="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_5dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/staticListData_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/news_hub_items" />
        <ProgressBar
            android:id="@+id/progress_bar_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/ll_no_data_found_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:layout_above="@+id/ll_powered_by">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_iz_nh_not_found"
                tools:ignore="UseAppTint" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/iz_no_new_update"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/iz_black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/iz_watch_this_space_to_get_latest_updates"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_10dp"
                android:textColor="@color/iz_black"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_powered_by"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fab_margin35"
            android:orientation="horizontal"
            android:background="#B7A69F9F"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            >
        <TextView
            android:id="@+id/tv_powered_by_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/iz_black"
            android:textSize="13sp"
            android:text="@string/iz_news_hub_powered_by"/>

        <TextView
            android:id="@+id/tv_izooto_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/iz_azure"
            android:textSize="13sp"
            android:text="iZooto"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>