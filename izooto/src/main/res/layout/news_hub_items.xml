<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_5dp"
    android:background="@color/iz_news_hub_bg">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UselessParent"
        android:gravity="center"
        android:background="@color/iz_news_hub_bg">

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_margin="@dimen/margin_10dp"
            android:baselineAligned="false">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="@drawable/rounded_fg">

                <ImageView
                    android:id="@+id/nt_banner_image"
                    android:layout_width="@dimen/width_110dp"
                    android:layout_height="@dimen/height_75dp"
                    android:contentDescription="@string/todo"
                    android:scaleType="fitXY"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                 android:layout_gravity="top"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nt_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:ellipsize="end"
                    android:maxLines="4"
                    android:text="@string/title"
                    android:textSize="14dp"
                    android:textStyle="normal"
                    android:textColor="@color/iz_news_hub_text_color"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/news_hub_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/_1_hr_ago"
                        android:textColor="@color/iz_news_hub_time_color"
                        android:textSize="13dp"
                        tools:ignore="RelativeOverlap,TextContrastCheck" />

                    <ImageView
                        android:id="@+id/news_hub_share_icon"
                        android:layout_width="@dimen/width_25dp"
                        android:layout_height="@dimen/height_25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/ic_baseline_share_25" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
        <View
            android:id="@+id/news_hub_view"
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="@color/dawn"/>
    </LinearLayout>

</RelativeLayout>