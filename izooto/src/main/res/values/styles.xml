<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/iz_colorPrimary</item>
        <item name="colorPrimaryDark">@color/iz_colorPrimaryDark</item>
        <item name="colorAccent">@color/iz_colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Progressbar_Accent">
        <item name="colorAccent">@color/iz_colorPrimary</item>
    </style>
    <style name="NH_ALERT_DIALOG" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/iz_nh_background</item>
    </style>

</resources>
